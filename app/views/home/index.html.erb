<div class="flex items-center justify-center min-h-screen">
    <% if user_signed_in? %>
    <div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 p-4">
        <h1 class="text-4xl font-bold text-blue-600 mb-4">Agile Deck</h1>
        <p class="text-lg text-gray-700 mb-6">Monte salas e vote suas estimativas</p>
    
        <h1 class="text-2xl font-semibold text-gray-800">Olá, <%= current_user.email %>!</h1>
        <p class="mt-4">
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-700 font-medium" %>
        </p>
    </div>
    <% else %>
    <div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
        <p class="text-lg text-gray-700">
        Bem-vindo, visitante! 
        <a href="<%= new_user_session_path %>" class="text-blue-500 hover:text-blue-700 font-medium">Faça login</a> para acessar mais recursos.
        </p>
    </div>
    <% end %>
</div>
