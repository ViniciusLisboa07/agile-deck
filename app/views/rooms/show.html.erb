<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 p-4">
  <div class="w-full max-w-md bg-white shadow-md rounded p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= @room.name %></h1>
    <p class="text-sm text-gray-600">Código da sala: <%= @room.code %></p>

    <% if @is_admin %>
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Configurar Deck</h2>
        <%= form_with url: configure_deck_room_path(@room), method: :post, local: true do |f| %>
          <div class="mb-4">
            <%= f.label :deck, "Cartas do Deck (separadas por vírgula)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :deck, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          <div class="flex justify-end">
            <%= f.submit "Salvar Deck", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-6">
        <p class="text-gray-700">Aguarde enquanto o administrador configura o deck.</p>
      </div>
    <% end %>
  </div>
</div>
